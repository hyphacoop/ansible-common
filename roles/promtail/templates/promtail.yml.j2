server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

client:
  url: {{ loki_url }}
  basic_auth:
    username: {{ loki_username }}
    password: {{ loki_password }}

scrape_configs:
  - job_name: journal
    journal:
      max_age: 12h
      labels:
        job: systemd-journal
        host: {{ inventory_hostname }}
    relabel_configs:
      - source_labels: ["__journal__systemd_unit"]
        target_label: "unit"